{
    "openapi": "3.0.1",
    "info": {
        "title": "Nozomi",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        },
        {
            "url": "https://localhost:3000"
        }
    ],
    "components": {
        "schemas": {
            "Id": {
                "type": "number",
                "example": "1"
            },
            "CommonResponse": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "number",
                        "example": "200"
                    },
                    "msg": {
                        "type": "string",
                        "example": "XXXXXXX"
                    },
                    "data": {
                        "type": "object",
                        "description": "公用的data字段"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "number",
                        "example": "400"
                    },
                    "msg": {
                        "type": "string",
                        "example": "XXXXXXX"
                    },
                    "data": {
                        "description": "任意值",
                        "additionalProperties": true
                    }
                }
            },
            "UserRegister": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "testUser"
                    },
                    "password": {
                        "type": "string",
                        "example": "password123"
                    }
                },
                "required": [
                    "username",
                    "password"
                ]
            },
            "UserLogin": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "testUser"
                    },
                    "password": {
                        "type": "string",
                        "example": "password123"
                    }
                },
                "required": [
                    "username",
                    "password"
                ]
            },
            "RegisterResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CommonResponse"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "$ref": "#/components/schemas/Id"
                                    }
                                }
                            }
                        }
                    }
                ]
            },
            "LoginResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CommonResponse"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "type": "object",
                                "properties": {
                                    "token": {
                                        "type": "string",
                                        "example": "jwt-token-example"
                                    },
                                    "id": {
                                        "$ref": "#/components/schemas/Id"
                                    }
                                }
                            }
                        }
                    }
                ]
            },
            "articleData": {
                "type": "object",
                "properties": {
                    "id": {
                        "$ref": "#/components/schemas/Id"
                    },
                    "title": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string"
                    },
                    "updated_at": {
                        "type": "string"
                    },
                    "picture": {
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "title",
                    "content",
                    "created_at",
                    "updated_at"
                ]
            },
            "addArticleData": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "picture": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "content"
                ]
            },
            "updateArticleData": {
                "$ref": "#/components/schemas/addArticleData"
            },
            "articleResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CommonResponse"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "$ref": "#/components/schemas/articleData"
                            }
                        }
                    }
                ]
            },
            "addArticleResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CommonResponse"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "$ref": "#/components/schemas/Id"
                                    }
                                }
                            }
                        }
                    }
                ]
            },
            "updateArticleResponse": {
                "$ref": "#/components/schemas/addArticleResponse"
            }
        }
    },
    "paths": {
        "/nozomi/register": {
            "post": {
                "summary": "用户注册",
                "tags": [
                    "user"
                ],
                "operationId": "registerUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserRegister"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "注册成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RegisterResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "注册失败",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/nozomi/login": {
            "post": {
                "summary": "用户登录",
                "tags": [
                    "user"
                ],
                "operationId": "loginUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserLogin"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "登录成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "登录失败",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/nozomi/article": {
            "get": {
                "summary": "获取Article",
                "tags": [
                    "article"
                ],
                "operationId": "getArticle",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "The unique identifier of the account",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "获取文章成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/articleResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "获取文章失败",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "新增文章",
                "tags": [
                    "article"
                ],
                "operationId": "addArticle",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/addArticleData"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "新增文章成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/addArticleResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "新增文章失败",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "更新文章",
                "tags": [
                    "article"
                ],
                "operationId": "updateArticle",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "The unique identifier of the account to update",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/updateArticleData"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "更新文章成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/updateArticleResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "更新文章失败",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}